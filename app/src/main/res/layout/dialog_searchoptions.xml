<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?colorPrimary">
    <TextView android:id="@+id/title"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="@string/main_dialog_filteropt_title0searchOptions"
              android:textColor="?onColorPrimaryAlt"
              android:textSize="22dp"
              android:background="?colorPrimaryAlt"
              android:paddingBottom="10dp"
              android:paddingTop="10dp"/>
    <LinearLayout android:id="@+id/content"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/title"
                  android:orientation="vertical">
        <TextView android:id="@+id/title_searchby"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/main_dialog_filteropt_header0searchBy"
                  android:textColor="?onColorPrimary"
                  android:gravity="center"
                  android:layout_marginTop="5dp"/>
        <RelativeLayout android:id="@+id/background_searchby"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">
            <Spinner android:id="@+id/spinnersearchby"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:backgroundTint="?onColorPrimary"
                     android:popupBackground="?colorPrimaryAlt"/>
        </RelativeLayout>
    </LinearLayout>
    <Button android:id="@+id/okbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@android:string/ok"
            android:textSize="15dp"
            android:textColor="?onColorPrimaryAlt"
            android:background="@drawable/dialog_button_background"
            android:layout_below="@id/content"/>
</RelativeLayout>