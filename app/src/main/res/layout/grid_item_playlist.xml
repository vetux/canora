<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp">
    <com.phaseshifter.canora.ui.widgets.CustomImageView android:id="@+id/grid_item_background"
                                                           android:layout_width="match_parent"
                                                           android:layout_height="match_parent"
                                                           android:scaleType="?scaleTexSurface"
                                                           android:src="?texSurface"
                                                           android:layout_alignTop="@id/data"
                                                           android:layout_alignBottom="@id/data"
                                                           app:automaticAnimation="true"
                                                           app:corners="15"/>
    <LinearLayout android:id="@+id/data"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_alignParentStart="true"
                  android:layout_alignParentTop="true">
        <com.phaseshifter.canora.ui.widgets.CustomImageView android:id="@+id/playlistImage"
                                                               android:layout_width="match_parent"
                                                               android:layout_height="match_parent"
                                                               android:scaleType="fitXY"
                                                               android:background="@null"
                                                               android:src="@drawable/artwork_unset"
                                                               android:layout_marginTop="5dp"
                                                               android:layout_marginLeft="5dp"
                                                               android:layout_marginRight="5dp"
                                                               app:ratioLock="true"
                                                               app:corners="20"/>
        <RelativeLayout android:id="@+id/bottomPart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">
            <RelativeLayout android:id="@+id/textCont"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@id/checkbox">
                <TextView android:id="@+id/subMenuTitle"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="PLACEHOLDER"
                          android:textColor="?onTexSurface"
                          android:textSize="18sp"
                          android:maxLines="1"
                          android:ellipsize="end"/>
                <TextView android:id="@+id/subMenuTracks"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_below="@id/subMenuTitle"
                          android:text="PLACEHOLDER"
                          android:textColor="?onTexSurface"
                          android:textSize="13sp"
                          android:maxLines="1"
                          android:ellipsize="end"
                          android:layout_marginStart="3dp"/>
            </RelativeLayout>
            <CheckBox android:id="@+id/checkbox"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:focusable="false"
                      android:focusableInTouchMode="false"
                      android:buttonTint="?colorSecondary"
                      android:layout_alignParentEnd="true"
                      android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>