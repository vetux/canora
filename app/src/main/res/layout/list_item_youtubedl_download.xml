<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_downloaditem_url"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="?onColorPrimary"
        app:layout_constraintEnd_toStartOf="@id/textView_downloaditem_eta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/progress_downloaditem" />

    <TextView
        android:id="@+id/textView_downloaditem_eta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_downloaditem_eta"
        android:textColor="?onColorPrimary"
        app:layout_constraintEnd_toStartOf="@id/progress_downloaditem"
        app:layout_constraintStart_toEndOf="@id/textView_downloaditem_url"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progress_downloaditem"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:indeterminate="false"
        android:padding="10dp"
        android:progressTint="?colorSecondary"
        android:progressTintMode="src_atop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView_downloaditem_eta"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>