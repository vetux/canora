<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings_tab_system_youtubeapi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/youtube_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?onColorPrimary_20"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/youtube_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_youtube_id_title"
        android:textColor="?onTexBackground"
        app:layout_constraintTop_toBottomOf="@id/youtube_line"
        app:layout_constraintBottom_toTopOf="@id/edittext_youtubekey"/>

    <EditText
        android:id="@+id/edittext_youtubekey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/settings_youtube_id"
        android:textColor="?onTexBackground"
        android:textColorHint="?onTexBackground_60"
        app:layout_constraintTop_toBottomOf="@id/youtube_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>