<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:bottom="5dp"
                  android:left="5dp"
                  android:right="5dp"
                  android:top="5dp">
                <shape android:dither="true"
                       android:shape="oval"
                       android:useLevel="false"
                       android:visible="true">
                    <solid android:color="?colorSecondary"/>
                    <corners android:radius="5dp"/>
                    <size android:width="20dp"
                          android:height="20dp"/>
                </shape>
            </item>
            <item android:id="@android:id/background">
                <ripple android:color="?colorSecondary"
                        android:radius="15dp"/>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:bottom="5dp"
                  android:left="5dp"
                  android:right="5dp"
                  android:top="5dp">
                <shape android:dither="true"
                       android:shape="oval"
                       android:useLevel="false"
                       android:visible="true">
                    <solid android:color="?onColorPrimary"/>
                    <corners android:radius="5dp"/>
                    <size android:width="20dp"
                          android:height="20dp"/>
                </shape>
            </item>
            <item android:id="@android:id/background">
                <ripple android:color="?colorSecondary"
                        android:radius="15dp"/>
            </item>
        </layer-list>
    </item>
</selector>